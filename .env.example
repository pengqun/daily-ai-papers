# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/daily_ai_papers

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Provider: "openai" or "anthropic"
# For OpenAI-compatible services (Groq, OpenRouter, Google AI Studio, etc.)
# just set provider=openai and override LLM_BASE_URL.
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key-here
LLM_BASE_URL=
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# ── Free provider examples (uncomment one) ──────────────────────────
#
# --- Groq (free, fast, needs signup at console.groq.com) ---
# LLM_API_KEY=gsk_...
# LLM_BASE_URL=https://api.groq.com/openai/v1
# LLM_MODEL=llama-3.3-70b-versatile
#
# --- OpenRouter (free tier, needs signup at openrouter.ai) ---
# LLM_API_KEY=sk-or-...
# LLM_BASE_URL=https://openrouter.ai/api/v1
# LLM_MODEL=deepseek/deepseek-r1:free
#
# --- Google AI Studio / Gemini (free, needs signup at aistudio.google.com) ---
# LLM_API_KEY=AIza...
# LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
# LLM_MODEL=gemini-2.0-flash
#
# --- Cerebras (free, needs signup at cloud.cerebras.ai) ---
# LLM_API_KEY=csk-...
# LLM_BASE_URL=https://api.cerebras.ai/v1
# LLM_MODEL=llama-3.3-70b

# Crawler settings
CRAWL_SCHEDULE_HOUR=6
CRAWL_CATEGORIES=cs.AI,cs.CL,cs.CV,cs.LG,stat.ML
CRAWL_MAX_RESULTS=100
CRAWL_DAYS_BACK=1

# Translation
TRANSLATION_LANGUAGES=zh,ja,es
