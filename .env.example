# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/daily_ai_papers

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Crawler settings
CRAWL_SCHEDULE_HOUR=6
CRAWL_CATEGORIES=cs.AI,cs.CL,cs.CV,cs.LG,stat.ML
CRAWL_MAX_RESULTS=100
CRAWL_DAYS_BACK=1

# Translation
TRANSLATION_LANGUAGES=zh,ja,es
